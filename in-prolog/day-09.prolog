% My understanding:
% On the stance of the tail, it's always observing if the head left its adjacent positions.
% So, to the 9-cells block that the tail stands on the center, when the head is leaving it
% by the command 'U' of `n` steps, the head can move northward out of the block via one of
% N-W, N, or N-W, and the tail get to go after it.

stance(((X,Y),(X,Y)), c).
stance(((X,Y),(X,Z)), n) :- Y - Z =:= -1.
stance(((X,Y),(W,Z)), nw) :- X - W =:= -1, Y - Z =:= -1.
stance(((X,Y),(Z,Y)), w) :- X - Z =:= -1.
stance(((X,Y),(W,Z)), sw) :- X - W =:= -1, Y - Z =:= 1.
stance(((X,Y),(X,Z)), s) :- Y - Z =:= 1.
stance(((X,Y),(W,Z)), se) :- X - W =:= 1, Y - Z =:= 1.
stance(((X,Y),(Z,Y)), e) :- X - Z =:= 1.
stance(((X,Y),(W,Z)), ne) :- X - W =:= 1, Y - Z =:= -1.

move((X,Y), n, Steps, (X,Z)) :- Z is Y - Steps.
move((X,Y), w, Steps, (Z,Y)) :- Z is X - Steps.
move((X,Y), s, Steps, (X,Z)) :- Z is Y + Steps.
move((X,Y), e, Steps, (Z,Y)) :- Z is X + Steps.

move((Head,Tail), 'U', Steps, Trace, (Head2,Tail2)) :-
    stance((Head,Tail), S),
    ( member(S, [nw,n,ne]), !,
      Steps0 is Steps - 0
    ; member(S, [w,c,e]), !,
      Steps0 is Steps - 1
    ; member(S, [sw,s,se]),
      Steps0 is Steps - 2
    ),
    move(Head, n, Steps, Head2),
    ( Steps0 > 0, !,
      (X,Y) = Head2,
      (_,Y3) = Tail,
      Y0 is Y + 1,
      Y2 is Y3 - 1,
      findall((X,Yx), between(Y0,Y2,Yx), Trace),
      Tail2 = (X,Y0)
    ; Trace = [],
      Tail2 = Tail
    ).
move((Head,Tail), 'D', Steps, Trace, (Head2,Tail2)) :-
    stance((Head,Tail), S),
    ( member(S, [sw,s,se]), !,
      Steps0 is Steps - 0
    ; member(S, [w,c,e]), !,
      Steps0 is Steps - 1
    ; member(S, [nw,n,ne]),
      Steps0 is Steps - 2
    ),
    move(Head, s, Steps, Head2),
    ( Steps0 > 0, !,
      (X,Y) = Head2,
      (_,Y3) = Tail,
      Y0 is Y - 1,
      Y2 is Y3 + 1,
      findall((X,Yx), between(Y2,Y0,Yx), Trace),
      Tail2 = (X,Y0)
    ; Trace = [],
      Tail2 = Tail
    ).
move((Head,Tail), 'L', Steps, Trace, (Head2,Tail2)) :-
    stance((Head,Tail), S),
    ( member(S, [nw,w,sw]), !,
      Steps0 is Steps - 0
    ; member(S, [n,c,s]), !,
      Steps0 is Steps - 1
    ; member(S, [ne,e,se]),
      Steps0 is Steps - 2
    ),
    move(Head, w, Steps, Head2),
    ( Steps0 > 0, !,
      (X,Y) = Head2,
      (X3,_) = Tail,
      X0 is X + 1,
      X2 is X3 - 1,
      findall((Xx,Y), between(X0,X2,Xx), Trace),
      Tail2 = (X0,Y)
    ; Trace = [],
      Tail2 = Tail
    ).
move((Head,Tail), 'R', Steps, Trace, (Head2,Tail2)) :-
    stance((Head,Tail), S),
    ( member(S, [ne,e,se]), !,
      Steps0 is Steps - 0
    ; member(S, [n,c,s]), !,
      Steps0 is Steps - 1
    ; member(S, [nw,w,sw]),
      Steps0 is Steps - 2
    ),
    move(Head, e, Steps, Head2),
    ( Steps0 > 0, !,
      (X,Y) = Head2,
      (X3,_) = Tail,
      X0 is X - 1,
      X2 is X3 + 1,
      findall((Xx,Y), between(X2,X0,Xx), Trace),
      Tail2 = (X0,Y)
    ; Trace = [],
      Tail2 = Tail
    ).

walk((_,_), [], Trace, Trace).
walk((Head,Tail), [Dir-N|Input], Acc, Trace) :-
    move((Head,Tail), Dir, N, Trace0, (Head2,Tail2)),
    walk((Head2,Tail2), Input, [Trace0|Acc], Trace).

solution(N) :-
    read-input(input, I),
    walk(((0,0),(0,0)), I, [(0,0)], T),
    flatten(T, F),
    sort(F, S),
    length(S, N).
